{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-g",
                "-std=c++14",
                "-Iinclude",
                "-I\"include\\logic\"",
                "-I\"include\\logic\\items\"",
                "-I\"include\\logic\\items\\weapons\"",
                "-I\"include\\logic\\items\\scrolls\"",
                "-I\"include\\logic\\items\\potions\"",
                "-I\"include\\logic\\items\\others\"",
                "-I\"include\\screen\"",
                "-I\"include\\screen\\screen elements\"",
                "-I\"include\\utilities\"",
                "-o",
                "BattleRoyale.exe",

                "src\\Main.cpp",
                "src\\Game.cpp",

                "src\\logic\\Cell.cpp",
                "src\\logic\\Map.cpp",
                "src\\logic\\Player.cpp",
                "src\\logic\\items\\Item.cpp",
                "src\\logic\\items\\others\\Label.cpp",
                "src\\logic\\items\\weapons\\Weapon.cpp",
                "src\\logic\\items\\weapons\\Bow.cpp",
                "src\\logic\\items\\weapons\\Sword.cpp",
                "src\\logic\\items\\weapons\\AK-47.cpp",
                "src\\logic\\items\\weapons\\GrenadeLauncher.cpp",
                "src\\logic\\items\\weapons\\SniperRifle.cpp",
                "src\\logic\\items\\weapons\\Stone.cpp",
                "src\\logic\\items\\others\\GPS.cpp",
                "src\\logic\\items\\others\\Apple.cpp",
                "src\\logic\\items\\others\\Backpack.cpp",
                "src\\logic\\items\\others\\ThirdLeg.cpp",
                "src\\logic\\items\\potions\\Potion.cpp",
                "src\\logic\\items\\potions\\PotionOfHealth.cpp",
                "src\\logic\\items\\potions\\PotionOfCheerfulness.cpp",
                "src\\logic\\items\\scrolls\\Scroll.cpp",
                "src\\logic\\items\\scrolls\\ScrollOfWall.cpp",
                "src\\logic\\items\\scrolls\\ScrollOfClumsiness.cpp",

                "src\\utilities\\CharMatrix.cpp",

                "src\\screen\\Screen.cpp",
                "src\\screen\\GameScreen.cpp",
                "src\\screen\\screen elements\\ScreenElement.cpp",
                "src\\screen\\screen elements\\MapScreenElement.cpp",  
                "src\\screen\\screen elements\\PlayerScreenElement.cpp",  
                "src\\screen\\screen elements\\MessageScreenElement.cpp"  
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}