{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-g",
                "-std=c++14",
                "-Iinclude",
                "-I\"include\\logic\"",
                "-I\"include\\logic\\items\"",
                "-I\"include\\screen\"",
                "-I\"include\\screen\\screen elements\"",
                "-I\"include\\utilities\"",
                "-o",
                "BattleRoyale.exe",

                "src\\Main.cpp",
                "src\\Game.cpp",

                "src\\logic\\Cell.cpp",
                "src\\logic\\Map.cpp",
                "src\\logic\\Player.cpp",
                "src\\logic\\items\\Item.cpp",
                "src\\logic\\items\\Label.cpp",
                "src\\logic\\items\\Weapon.cpp",
                "src\\logic\\items\\Bow.cpp",
                "src\\logic\\items\\Sword.cpp",
                "src\\logic\\items\\AK-47.cpp",
                "src\\logic\\items\\GrenadeLauncher.cpp",
                "src\\logic\\items\\SniperRifle.cpp",

                "src\\utilities\\CharMatrix.cpp",

                "src\\screen\\Screen.cpp",
                "src\\screen\\GameScreen.cpp",
                "src\\screen\\screen elements\\ScreenElement.cpp",
                "src\\screen\\screen elements\\MapScreenElement.cpp",  
                "src\\screen\\screen elements\\PlayerScreenElement.cpp",  
                "src\\screen\\screen elements\\MessageScreenElement.cpp"  
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}